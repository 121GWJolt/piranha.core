<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>7.0.0-alpha1</Version>
    <Company>Piranha CMS</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Session" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.2.0" />
    <PackageReference Include="Askmethat.Aspnet.JsonLocalizer" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Piranha\Piranha.csproj" />
    <ProjectReference Include="..\Piranha.AspNetCore\Piranha.AspNetCore.csproj" />
    <ProjectReference Include="..\Piranha.Manager.Core\Piranha.Manager.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="assets\dist\**\*" />
    <EmbeddedResource Update="Resources\Localization.General.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Localization.General.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Localization.Media.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Localization.Media.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Localization.Alias.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Localization.Alias.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Localization.General.Designer.cs">
      <DependentUpon>Localization.General.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Localization.Media.Designer.cs">
      <DependentUpon>Localization.Media.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Localization.Alias.Designer.cs">
      <DependentUpon>Localization.Alias.resx</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
