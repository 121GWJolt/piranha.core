@model Piranha.Extend.Blocks.ImageBlock
@{
    var prefix = Html.ViewData.TemplateInfo.HtmlFieldPrefix
        .Replace("[", "_").Replace("]", "_").Replace(".", "_");    
}

<div class="block-image">
    <img id="@(prefix)_Preview" src="@(Model.Body.Media != null ? Model.Body.Media.PublicUrl : "/manager/assets/img/block-img-placeholder.png")">
    <div class="block-image-picker">
        <div class="row">
            <div class="col-xs-9">
                @Html.HiddenFor(m => m.Body.Id)
                <div class="well well-sm">
                    <a id="@(prefix)_Filename" href="#" data-toggle="modal">
                        @if (Model.Body.Media != null) {
                            @Model.Body.Media.Filename
                        } else {
                            <text>&nbsp;</text>
                        }
                    </a>
                </div>
            </div>
            <div class="col-xs-3">
                <div class="btn-group btn-group-justified" role="group">
                    <div class="btn-group" role="group" style="padding-right:5px">
                        <button class="btn btn-primary text-center" type="button" data-toggle="modal" data-target="#modalMedia" data-filter="image" data-mediaid="@(prefix)_Id" data-medianame="@(prefix)_Filename" data-mediaurlid="@(prefix)_Preview">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </div>
                    <div class="btn-group" role="group" style="padding-left:5px">
                        <button class="btn btn-danger text-center btn-media-clear" type="button" data-mediaid="@(prefix)_Id" data-medianame="@(prefix)_Filename" data-mediaurlid="@(prefix)_Preview">
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>  
</div>