@inject IViewLocalizer Localizer

<div id="blockpicker" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-cubes"></i> @Localizer["Select block"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div v-for="category in categories">
                    <div class="blocktype-category">{{ category.name }}</div>
                    <div class="blocktype-list">
                        <div class="blocktype" v-for="item in category.items">
                            <a href="#" class="btn btn-block" v-on:click.prevent="select(item)">
                                <i :class="item.icon"></i>
                                <span>{{ item.name }}</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
