@model Guid
@inject IViewLocalizer Localizer
@section script
{
    <script src="~/assets/tinymce/tinymce.min.js"></script>
    <script src="~/assets/js/piranha.pageedit.min.js"></script>
    <script>
        piranha.pageedit.load("@Model");
    </script>

}

<div id="pageedit">
    <div class="top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Localizer["Content"]</li>
                <li class="breadcrumb-item"><a href="~/manager/pages">@Localizer["Pages"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit"]</li>
            </ol>
        </nav>

        <div class="container-fluid">
            <div class="top-nav">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-success btn-labeled dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-check"></i>
                        @Localizer["Save"]
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        <a class="dropdown-item" href="#">Preview</a>
                        <a class="dropdown-item" href="#">Publish</a>
                        <a class="dropdown-item text-danger" href="#">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input v-model="title" type="text" class="form-control form-control-lg">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body blocks">
                <div v-for="block in blocks" :class="'block ' + block.component">
                    <div class="block-header">
                        <i :class="block.icon"></i><strong>{{ block.name }}</strong>
                    </div>
                    <component v-bind:is="block.component" v-bind:key="block.gid" v-bind:gid="block.gid" v-bind:block="block.item"></component>
                </div>
            </div>
        </div>
    </div>
</div>